<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Get text Input field values in Javascript</title>
  </head>
  <body>
    <h2>JavaScript Addition</h2>
    <input type="text" placeholder="Enter first number" id="myInput" />
    +
    <input type="text" placeholder="Enter second number" id="yourInput" />
    =
    <input type="text" placeholder="Answer" id="Answer" readonly=""/>

    <button type="button" onclick="getInputValue();">Get Value</button>
    <script>
      function getInputValue() {
        var sum =
          parseInt(document.getElementById("myInput").value) +
          parseInt(document.getElementById("yourInput").value);
        var inputVal = document.getElementById("myInput").value;
        document.getElementById("Answer").value = sum;
      }
    </script>
  </body>
